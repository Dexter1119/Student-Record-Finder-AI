<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentRecordFinder">

        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />

        <activity
            android:name=".ui.SignupActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AdminActivity"
            android:exported="false" />

        <activity
            android:name=".ui.faculty.FacultyActivity"
            android:exported="false" />

        <activity
            android:name=".ui.student.StudentActivity"
            android:exported="false" />

        <!-- FACULTY RECORDS -->
        <activity
            android:name=".ui.faculty.records.StudentDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.faculty.records.AddStudentActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.faculty.AddFacultyActivity"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name=".ui.admin.faculty.EditFacultyActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.students.AdminStudentDetailActivity"
            android:exported="false" />


    </application>

</manifest>
