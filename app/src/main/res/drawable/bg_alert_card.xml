<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Card background -->
    <solid android:color="#FFFFFF"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Light border -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/>

    <!-- Inner spacing -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp"/>

</shape>
