<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- STUDENT PROFILE CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_faculty_card"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStudentName"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvRoll"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDepartment"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- PERFORMANCE OVERVIEW -->
        <TextView
            android:text="Performance Overview"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ATTENDANCE CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_faculty_card"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:text="Attendance"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAttendancePercent"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/progressAttendance"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- GPA CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_faculty_card"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:text="GPA (4.0 Scale)"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvGpaValue"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- AI ALERTS -->
        <TextView
            android:text="AI Alerts"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvAiAlerts"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_faculty_card"
            android:padding="16dp"
            android:textColor="@color/error_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- AI SUGGESTIONS -->
        <TextView
            android:text="AI Recommendations"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvAiSuggestions"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_faculty_card"
            android:padding="16dp"
            android:textColor="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
