<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F6F6F8"
    android:padding="24dp">

    <!-- Icon Container -->
    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/bg_icon_container"
        android:gravity="center"
        android:elevation="8dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_shield"
            android:tint="#2B4BEE"/>
    </LinearLayout>

    <!-- App Title -->
    <TextView
        android:layout_marginTop="32dp"
        android:text="Student Record Finder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0D101B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Subtitle -->
    <TextView
        android:layout_marginTop="8dp"
        android:text="Powered by Intelligent Insights"
        android:textSize="14sp"
        android:textColor="#4C599A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <!-- Loading Text -->
    <TextView
        android:text="Initializing secure connection..."
        android:textSize="12sp"
        android:textColor="#4C599A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Progress Bar -->
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="12dp"
        android:layout_width="200dp"
        android:layout_height="6dp"
        android:progress="60"
        android:indeterminate="true"/>
</LinearLayout>
