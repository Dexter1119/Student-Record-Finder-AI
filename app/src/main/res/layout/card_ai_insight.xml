<!-- AI HIGHLIGHT CARD -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ai_card"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:text="✨s✨ AI INSIGHT"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:letterSpacing="0.08"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:layout_marginTop="8dp"
        android:text="Enrollment is projected to increase by 8% next semester."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:layout_marginTop="6dp"
        android:text="Based on historical admission data and current application trends."
        android:textSize="13sp"
        android:textColor="@color/white"
        android:alpha="0.85"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
</LinearLayout>
